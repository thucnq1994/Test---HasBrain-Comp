<!DOCTYPE html>
<html>
    <head>
	    <% include template/auth_header.ejs %>
    </head>
    <body>
        
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Hệ thống quản lý cửa hàng ExpressJS</h3>
                        </div>
                        <div class="panel-body">
                            <% if(typeof(mess) !== 'undefined'){ %>
                        
                                <div class="alert alert-danger alert-dismissable">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                    <%= mess %>
                                </div>
                                                
                            <% } %>
                            <form role="form" action="" method="post">
                                <fieldset>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Tài khoản" name="username" type="username" autofocus>
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control" placeholder="Mật khẩu" name="password" type="password" value="">
                                    </div>
                                    <!-- Change this to a button or input when using this as a form -->
                                    <button class="btn btn-lg btn-success btn-block">Đăng nhập</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
	    <!--JS -->
	    <% include template/auth_jsdefaults.ejs %>
	    
    </body>
</html>
